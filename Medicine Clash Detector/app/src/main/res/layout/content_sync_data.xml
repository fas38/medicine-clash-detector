<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SyncDataActivity"
    tools:showIn="@layout/activity_sync_data">

    <Button
        android:id="@+id/button_sync_condition"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:backgroundTint=" #0099ff"
        android:text="Sync Health Condition from Cloud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_sync_medicine"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="152dp"
        android:backgroundTint=" #0099ff"
        android:text="Sync Medicine from Cloud"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_sync_condition"
        app:layout_constraintVertical_bias="0.892" />

</android.support.constraint.ConstraintLayout>